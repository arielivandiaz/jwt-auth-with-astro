{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends":  "standard",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "semi": [
            "error",
            "always",
            { "omitLastInOneLineBlock": true }
        ],
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "always",
            "asyncArrow": "always"
        }],
        "keyword-spacing": ["error", { "after": true }],
        "object-curly-spacing": ["error", "always"],
        "space-before-blocks": ["error", "always"],
        "func-call-spacing": ["error", "never"]
        
    }
}