---
export interface Props {
	active: string;
}

const { active } = Astro.props;
---

<nav>
    <a href="" class={ active === 'home' ? 'active' : ''}>Home</a>
    <a href="./signin"class={ active === 'signin' ? 'active' : ''} >Sign In </a>
    <a href="./signup"class={ active === 'signup' ? 'active' : ''} >Sign Up </a>
    <a href="./users"class={ active === 'users' ? 'active' : ''} >Users Panel </a>
</nav>

<style>
    nav {
        width: 100%;
        display: flex;        
        justify-content: center;

    }
    nav a {
        padding: 2px 10px;
        margin: 1px 10px;
    }
    .active {
        color: #77cc11;
    }
</style>